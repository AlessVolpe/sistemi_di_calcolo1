#include <stdlib.h>
#include <string.h>

void* clone(const void* src, int n) {
	const void* si = src;
	int b = n;	
	void* a = malloc(b);	//void* des = malloc(n);
	void* di = a;
    	if(di == 0) goto E;	//if (des==0) return 0;
    	memcpy(di,si,b);	//memcpy(des, src, n);
    	a = di;			//return des;
	return a;
E:	a = 0;
	return a;
}	
