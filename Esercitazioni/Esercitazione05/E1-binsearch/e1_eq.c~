#include "e1.h"

int binsearch(int *v, int n, int x) {
	int* b = v;    	
	int si = 0;		//int i=0, j=n;
	int di = n;
	int p = x;
	int a = 1;
L:    	if(si >= di) goto E;	//while (i<j) {
    	int m = (si + di)>> 1;	//    int m = (i+j)/2;
    	if(b[m] == p) goto E1;	//    if (v[m]==x) return 1;
    	if(b[m] <= p) goto F;	//    if (v[m]>x) j=m;
    	di = m;			//    else i=m+1;
	goto L;
E:	a = 0;		    	//}
    	return a;		//return 0;
E1:	return a;
F:	si = m + 1;
	goto L;
}	// Scrivere il C equivalente qui...
