#include "e2.h"

int lcm(int x, int y) {
	int si = x;    
	int di = y;		//int greater = y;
    	if(si <= di){		//if (x > y)
    		int c = si;
	};			//    greater = x;
    	int d = c % si;		//while (1) {
	char bl = d == 0;
	d = c % di;
	char bh = d == 0;
	bh = bh & bl;
    	if(bh != 0) goto E;	//    if ((greater % x == 0) && (greater % y == 0))
    	return c;		//        return greater;
    				//    greater++;
    				//}
E:	c++;
	return c;
}
